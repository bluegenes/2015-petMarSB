{
    "meta" : {
	    "authors": ["Camille Scott", "Weiming Li", "Titus Brown"],
	    "description": "",
	    "data_type": ["RNA-seq", "DNA-seq"],
	    "date": 2015
    },

    "pipeline": {
        "prefix": "petMarSB",
        "work_dir": "_work",
        
        "trimmomatic": { 
            "params": "LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:32" 
        },

        "khmer": { 
            "ksize": 25,

            "parallel": { 
                "table_size": 2e9,
                "n_tables": 4,
                "coverage": 20
            }, 

            "pooled": { 
                "table_size": 4e9,
                "n_tables": 4,
                "coverage": 20 
            }
        },

        "velvet": {
			"template_file": "velvet.tpl",
			"script_file": "velvet.sh",
            "time": "72:00:00",
            "n_threads": 16,
            "mem": "512gb",
			"k_start": 23,
            "k_end": 43,
            "k_step": 4,
            "min_contig_lgth": 300,
            "cov_cutoff": 8,
            "exp_cov": 18,
            "ins_length": 300,
            "max_gap_count": 7,
            "min_pair_count": 7,
            "directory": "2015-petMar-sperm-velvet"
        }
    }
}
