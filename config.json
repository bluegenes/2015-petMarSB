{
    "meta" : {
	    "authors": ["Camille Scott", "Weiming Li", "Titus Brown"],
	    "description": "",
	    "data_type": ["RNA-seq", "DNA-seq"],
	    "date": 2015
    },

    "pipeline": {
        "prefix": "petMarSB",
        "work_dir": "_work",
        
        "trimmomatic": { 
            "params": "LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:32" 
        },

        "blast": { 
            "evalue": 0.000001,
            "params": "",
            "threads": 4
        },

		"bowtie": {
			"n_threads": 4
		},

        "busco": {
            "path": "/work/BUSCO_v1.1b1/BUSCO_v1.1b1.py",
            "n_threads": 4,
            "vert_url": "http://busco.ezlab.org/files/vertebrata_buscos.tar.gz",
            "db_dir": "busco_db",
            "output_suffix": ".busco.results"
        },

        "hmmscan": {
            "n_threads": 8
        },

        "khmer": { 
            "ksize": 25,

            "parallel": { 
                "table_size": 2e9,
                "n_tables": 4,
                "coverage": 20,
                "min_abund": 2
            }, 

            "pooled": { 
                "table_size": 8e9,
                "n_tables": 4,
                "coverage": 20 
            }
        }
    }
}
